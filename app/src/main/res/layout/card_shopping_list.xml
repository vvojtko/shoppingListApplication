<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:id="@+id/listCard"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@color/colorPrimary"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/shoppingListImage"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="20dp"
                android:src="@drawable/icons_list" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/shoppingListName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:text="List name"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:textStyle="bold"


                    />

                <TextView
                    android:id="@+id/listProgress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:text="5/20"
                    android:textColor="@color/white"
                    android:textStyle="bold"


                    />


            </LinearLayout>

            <ImageView
                android:id="@+id/bin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="343dp"
                android:layout_marginBottom="21dp"
                app:srcCompat="@drawable/icons_trash" />

        </LinearLayout>

        <ImageView
            android:id="@+id/iconChecked"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="0dp"
            android:layout_marginRight="0dp"
            android:padding="15dp"
            app:srcCompat="@drawable/icons_checked" />

        <ImageView
            android:id="@+id/iconTrash"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="0dp"
            android:layout_marginRight="75dp"
            android:padding="15dp"
            app:srcCompat="@drawable/icons_trash" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>